FROM node:20
 
WORKDIR /app
 
ENV PATH /app/node_modules/.bin:$PATH
 
COPY package.json ./
COPY package-lock.json ./
RUN npm install
 
COPY . ./
 
ARG REACT_APP_URL_PORTAL
ARG REACT_APP_URL_WF
ARG REACT_APP_URL_IDENTITY
ENV REACT_APP_URL_PORTAL=$REACT_APP_URL_PORTAL
ENV REACT_APP_URL_WF=$REACT_APP_URL_WF
ENV REACT_APP_URL_IDENTITY=$REACT_APP_URL_IDENTITY

CMD ["npm", "start"]    